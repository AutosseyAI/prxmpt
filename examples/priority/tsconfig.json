{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "declaration": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@autossey/prxmpt",
    "lib": [
      "ES2022"
    ],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "build",
    "rootDirs": [
      "source"
    ],
    "strict": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "types": [
      "node"
    ]
  },
  "files": [
    "source/index.ts"
  ]
}
